    "express": "4.21.2",
    "morgan": "^1.10.0",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.8.1",
    "whatsapp-web.js": "^1.27.0",
    "wwebjs-aws-s3": "^1.0.2",
    "zod": "^3.24.2"
